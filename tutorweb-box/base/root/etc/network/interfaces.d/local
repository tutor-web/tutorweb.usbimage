auto br0
iface br0 inet static
    address 172.16.0.1
    netmask 255.240.0.0
    bridge_ports int0
    bridge_maxwait 5
    up /sbin/iptables-restore < /etc/network/iptables.up.rules 

auto wlan0
iface wlan0 inet manual
    hostapd /etc/hostapd/hostapd.conf

allow-hotplug wwan0
iface wwan0 inet dhcp

allow-hotplug wwan1
iface wwan1 inet dhcp

allow-hotplug wwan2
iface wwan2 inet dhcp
