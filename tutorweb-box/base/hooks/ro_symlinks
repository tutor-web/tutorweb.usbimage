# symlinks are dereferenced when copying the root directory, so we create
# the link using a hook instead

for f in \
        /etc/hostname \
        /etc/mailname \
        /etc/phonehome \
        /var/lib/mysql \
        /var/lib/smly \
        /var/lib/dhcp/dhclient.leases \
        /var/log/lastlog \
        /var/log/nginx/access.log \
        /var/log/nginx/error.log \
        /srv/tutorweb.buildout \
        ; do
    mkdir -p `dirname $(br_rootfs_dir)${f}`
    ln -fs /var/local${f} $(br_rootfs_dir)${f}
done
